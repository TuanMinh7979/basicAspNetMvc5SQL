@model IEnumerable<BachHoaTH.Models.Product>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


@section Styles{

<link rel="stylesheet" href="~/css/shop.css">
<link rel="stylesheet" href="~/css/phantranglib.css" />
<link rel="stylesheet" href="~/css/phantrang.css" />

}
<!-- Begin Main Content Area -->
<main class="main-content">

    <div class="shop-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 order-lg-1 order-2 pt-10 pt-lg-0">
                    <div class="sidebar-area">
                        <div class="widgets-searchbox mb-9">

                            <input class="input-field" value=@(ViewBag.searchVal) type="text" placeholder="Search">
                            <button class="widgets-searchbox-btn">
                                <i class="pe-7s-search"></i>
                            </button>

                        </div>


                        <div class="widgets-area mb-9">
                            <h2 class="widgets-title mb-5">Color</h2>
                            <div class="widgets-item">
                                <ul class="widgets-checkbox">
                                    <li>
                                        <input class="input-checkbox" type="checkbox" id="color-selection-1">
                                        <label class="label-checkbox mb-0" for="color-selection-1">
                                            Green
                                            <span>7</span>
                                        </label>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="widgets-area widgets-filter mb-9">
                            <h2 class="widgets-title mb-5">Price Filter</h2>
                            <div class="priceFilterContainer">
                                <div class="priceTagContainer">
                                    <button class="priceFilterBtn" value="l1">Duoi 5 trieu</button>
                                    <button class="priceFilterBtn" value="l2">Tu 5 den 15 trieu</button>
                                    <button class="priceFilterBtn" value="l3">Tren 15 trieu</button>

                                </div>
                                <div class="priceRange">
                                    <div class="priceRangeInps">
                                        <div class="priceInp"> <label>From</label>
                                            <input id="priceFrom" type="number">
                                        </div>
                                        <div class="priceInp"> <label>To</label>
                                            <input id="priceTo" type="number">
                                        </div>
                                    </div>

                                    <div class="priceRangeSubmit"><button id="priceRangeSubmit">Ap dung</button></div>

                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-lg-9 order-lg-2 order-1">
                    <div class="product-topbar">
                        <ul>

                            <li class="short">
                                <div id="catFilterGroup">
                                    <span style="border: 1px solid blue">Danh mục </span>
                                    <select class="" id="catIdSel" value=@(ViewBag.catIdVal)>
                                        <option value="0
                                        ">Tất cả</option>
                                        <option value="3">Laptop</option>
                                        <option value="4">Linh kiện máy tính</option>
                                        <option value="9">Đồ gia dụng</option>
                                        <option value="12">Điện thoại</option>
                                        <option value="13">Xe máy</option>
                                        <option value="14">Giày</option>
                                    </select>
                                </div>

                            </li>
                            <li class="short">
                                <select class="nice-select wide rounded-0">
                                    <option value="5">Sort by High Price</option>
                                    <option value="6">Sort by Low Price</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content text-charcoal pt-8">
                        <div class="tab-pane fade show active" id="grid-view" role="tabpanel"
                            aria-labelledby="grid-view-tab">
                            <div id="proList" style="border:1px solid red" class="product-grid-view row">
                                @* *@
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        string url = $"/{@item.Alias}-{@item.ProductId}.html";
                                        <div class="col-md-6 col-lg-3 mb-3 col-6  productList__item ">
                                            <a href="@url">
                                                <div class="productList__item-image">
                                                    <img src="~/images/products/@item.Thumb" class="card-img-top"
                                                alt="Laptop" />

                                                </div>
                                                <div class="productList__item-content">
                                                    <div class="justify-content-between productList__item-info">
                                                        <div class="productList__item-name" style="padding: 6px">
                                                            <p class="mb-0 ">@(item.ProductName)</p>
                                                        </div>
                                                        <div class="productList__item-price" style="padding: 6px">
                                                            <p class="text-dark mb-0 ">@(item.Price)</p>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-center addToCartDiv">
                                                        <button class="addToCartBtn">Xem</button>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                }
                                @* *@
                            </div>
                        </div>

                    </div>
                    <br />

                </div>
            </div>
            @* <div>
                <div id="pager"></div>
                <div class="text-muted" id="info"></div>
                </div> *@
        </div>


    </div>

</main>






<!-- Main Content Area End Here -->

@section Scripts{
<script type="text/javascript" src="~/js/shop.js"></script>
@* <script type="text/javascript" src="~/js/phantrang.js"></script> *@
}